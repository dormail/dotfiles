snippet beg "begin{} / end{}" bA
\begin{$1}
	$0
\end{$1}
endsnippet

snippet \sec "section{}" bA
\section{$1}
\label{sec:$1}
$0
endsnippet

snippet \subsec "subsection{}" bA
\subsection{$1}
\label{sec:$1}
$0
endsnippet

snippet \sss "subsubsection{}" bA
\subsubsection{$1}
\label{sec:$1}
$0
endsnippet
